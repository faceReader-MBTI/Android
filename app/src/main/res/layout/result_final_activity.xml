<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_next2"
        android:layout_width="213dp"
        android:layout_height="76dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="다음으로"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="우리 똑똑이 에능이가\n더 똑똑해지도록\n도와주세요!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_ai"
        android:layout_width="200dp"
        android:layout_height="236dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:srcCompat="@drawable/smile_img" />

    <TextView
        android:id="@+id/tv_desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="당신의 MBTI를 입력해주세요."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ai" />

    <TextView
        android:id="@+id/tv_desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 데이터는 오직,\n에능이 학습에만 사용됩니다."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="@font/gmarketsans_ttf_light"
        app:layout_constraintStart_toStartOf="@+id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc1" />

    <EditText
        android:id="@+id/edit_user_mbti"
        android:layout_width="267dp"
        android:layout_height="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:fontFamily="@font/gmarketsans_ttf_light"
        android:hint="MBTI를 기입해주세요"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc2" />
</androidx.constraintlayout.widget.ConstraintLayout>